<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
  </style>
</head>
<body>
  <h1>Admin Dashboard</h1>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Menu Item Name</th>
        <th>Total Price</th>
        <th>Phone</th> <!-- New column for Phone -->
        <th>Status</th>
        <th>Actions</th>
        <th>SMS</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.order_id %></td>
          <td>
            <% if (order.dishes.length > 0) { %>
              <% order.dishes.forEach(dish => { %>
                <p><%= dish.menu_item_name %> (x<%= dish.quantity %>)</p>
              <% }) %>
            <% } else { %>
              <p>N/A</p>
            <% } %>
          </td>
          <td>$<%= order.total_price ? parseFloat(order.total_price).toFixed(2) : '0.00' %></td>
          <td><%= order.phone %></td> <!-- Display Phone -->
          <td><%= order.status %></td>
          <td>
            <% if (order.status === 'Pending') { %>
              <form action="/admin/orders/<%= order.order_id %>/accept" method="POST" style="display:inline;">
                <button type="submit">Accept</button>
              </form>
              <form action="/admin/orders/<%= order.order_id %>/decline" method="POST" style="display:inline;">
                <button type="submit">Decline</button>
              </form>
            <% } else { %>
              <p><%= order.status %></p>
            <% } %>
          </td>
          <td>
            <% if (order.status === 'Accepted') { %>
              <% if (order.sms_sent) { %>
                <form action="/admin/orders/<%= order.order_id %>/send-sms" method="POST" style="display:inline;">
                  <button type="submit">Re-Send SMS</button>
                </form>
              <% } else { %>
                <form action="/admin/orders/<%= order.order_id %>/send-sms" method="POST" style="display:inline;">
                  <button type="submit" style="background-color: gray;">Send SMS</button>
                </form>
              <% } %>
            <% } else { %>
              <p>N/A</p>
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>

